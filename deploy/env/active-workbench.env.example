# Active Workbench backend runtime environment
# Copy to: /etc/active-workbench/active-workbench.env

# Core runtime
ACTIVE_WORKBENCH_DATA_DIR=/var/lib/active-workbench/data
ACTIVE_WORKBENCH_YOUTUBE_MODE=oauth
ACTIVE_WORKBENCH_ENABLE_SCHEDULER=true
# Tailscale-only default deployment: expose backend on the VM network stack.
# For public Nginx reverse proxy deployments, set this to 127.0.0.1.
ACTIVE_WORKBENCH_BIND_HOST=0.0.0.0

# Required providers
ACTIVE_WORKBENCH_SUPADATA_API_KEY=REPLACE_ME
ACTIVE_WORKBENCH_BUCKET_TMDB_API_KEY=REPLACE_ME

# Mobile share endpoint auth is disabled by default for Tailscale-only deployments.
# Legacy key setting still exists for compatibility but is no longer required.
ACTIVE_WORKBENCH_MOBILE_SHARE_RATE_LIMIT_WINDOW_SECONDS=60
ACTIVE_WORKBENCH_MOBILE_SHARE_RATE_LIMIT_MAX_REQUESTS=30

# Optional telemetry/logs
ACTIVE_WORKBENCH_TELEMETRY_ENABLED=true
ACTIVE_WORKBENCH_TELEMETRY_SINK=log
ACTIVE_WORKBENCH_LOG_LEVEL=INFO
